LatexCommand nomenclature
prefix "z"
symbol "WENO"
description "Weighted Essentially Non-Oscillatory"

\end_inset


\begin_inset CommandInset nomenclature
LatexCommand nomenclature
prefix "z"
symbol "DG"
description "Discontinuous Galerkin"

\end_inset


\begin_inset CommandInset nomenclature
LatexCommand nomenclature
prefix "z"
