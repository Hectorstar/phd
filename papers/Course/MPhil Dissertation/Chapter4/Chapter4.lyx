\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\Xi=\Xi_{1}\Xi_{2}=\left(\begin{array}{cccc}
\frac{\gamma p-\sigma_{11}}{\rho}+\Omega_{11}^{1} & \Omega_{12}^{1} & \Omega_{13}^{1} & \frac{\left(\gamma-1\right)\alpha^{2}T}{\rho}\\
\frac{-\sigma_{21}}{\rho}+\Omega_{21}^{1} & \Omega_{22}^{1} & \Omega_{23}^{1} & 0\\
\frac{-\sigma_{31}}{\rho}+\Omega_{31}^{1} & \Omega_{32}^{1} & \Omega_{33}^{1} & 0\\
