\begin_layout Standard
Let 
\begin_inset Formula $\boldsymbol{q}=s+x\boldsymbol{i}+y\boldsymbol{j}+z\boldsymbol{k}$
\end_inset

 be the unit quaternion (so that 
\begin_inset Formula $s^{2}+x^{2}+y^{2}+z^{2}=1$
\end_inset

) corresponding to the rotation matrix 
\begin_inset Formula $U$
\end_inset

.
 Then we have:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
U=\left(\begin{array}{ccc}
1-2y^{2}-2z^{2} & 2xy-2sz & 2zx+2sy\\
2xy+2sz & 1-2z^{2}-2x^{2} & 2yz-2sx\\
2zx-2sy & 2yz+2sx & 1-2x^{2}-2y^{2}
\end{array}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Noting that 
\begin_inset Formula $s\dot{s}+x\dot{x}+y\dot{y}+z\dot{z}=0$
\end_inset

, it is straightforward to confirm that we have:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
U^{T}\dot{U}\Lambda+\Lambda\dot{U^{T}}U=2\left(\begin{array}{ccc}
0 & \left(s\dot{z}-z\dot{s}+y\dot{x}-x\dot{y}\right)\left(\lambda_{1}-\lambda_{2}\right) & \left(s\dot{y}-y\dot{s}+x\dot{z}-z\dot{x}\right)\left(\lambda_{3}-\lambda_{1}\right)\\
\left(s\dot{z}-z\dot{s}+y\dot{x}-x\dot{y}\right)\left(\lambda_{1}-\lambda_{2}\right) & 0 & \left(s\dot{x}-x\dot{s}+z\dot{y}-y\dot{z}\right)\left(\lambda_{2}-\lambda_{3}\right)\\
\left(s\dot{y}-y\dot{s}+x\dot{z}-z\dot{x}\right)\left(\lambda_{3}-\lambda_{1}\right) & \left(s\dot{x}-x\dot{s}+z\dot{y}-y\dot{z}\right)\left(\lambda_{2}-\lambda_{3}\right) & 0
\end{array}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Elements 
\begin_inset Formula $\left(2,3\right),\left(1,3\right),\left(1,2\right)$
\end_inset

 of 
\begin_inset Formula $\sym\left(U^{T}\dot{U}\Lambda\right)$
\end_inset

 can be written in the following form:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
2\left(\begin{array}{c}
\left(s\dot{x}-x\dot{s}+z\dot{y}-y\dot{z}\right)\left(\lambda_{2}-\lambda_{3}\right)\\
\left(s\dot{y}-y\dot{s}+x\dot{z}-z\dot{x}\right)\left(\lambda_{3}-\lambda_{1}\right)\\
\left(s\dot{z}-z\dot{s}+y\dot{x}-x\dot{y}\right)\left(\lambda_{1}-\lambda_{2}\right)
\end{array}\right)=2\left(\begin{array}{c}
\left(s\dot{x}+x\frac{x\dot{x}+y\dot{y}+z\dot{z}}{s}+z\dot{y}-y\dot{z}\right)\left(\lambda_{2}-\lambda_{3}\right)\\
\left(s\dot{y}+y\frac{x\dot{x}+y\dot{y}+z\dot{z}}{s}+x\dot{z}-z\dot{x}\right)\left(\lambda_{3}-\lambda_{1}\right)\\
\left(s\dot{z}+z\frac{x\dot{x}+y\dot{y}+z\dot{z}}{s}+y\dot{x}-x\dot{y}\right)\left(\lambda_{1}-\lambda_{2}\right)
\end{array}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Denoting elements 
\begin_inset Formula $\left(2,3\right),\left(1,3\right),\left(1,2\right)$
\end_inset

 of 
\begin_inset Formula $\sym\left(\Lambda U^{T}\nabla\boldsymbol{v}U\right)$
\end_inset

