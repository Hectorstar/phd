pages = {723--732},
publisher = {Birkh{\"{a}}user Basel},
title = {{ADER: Arbitrary-Order Non-Oscillatory Advection Schemes}},
url = {https://doi.org/10.1007/978-3-0348-8372-6{\_}26},
year = {2001}
}
